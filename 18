import java.util.Arrays;

public class Main {

    public static void main(String[] args) {

        Integer[] array = {3,1,5,2,4};

        // сортировка по возрастанию
        sortArray(array, (a, b) -> a - b);
        System.out.println("Отсортированный массив в порядке возрастания:: " + Arrays.toString(array));

        // сортировка по убыванию
        sortArray(array, (a, b) -> b - a);
        System.out.println("Отсортированный массив в порядке убывания: " + Arrays.toString(array));
    }

    public static void sortArray(Integer[] array, java.util.Comparator<Integer> comparator) {
        Arrays.sort(array, comparator);}}
