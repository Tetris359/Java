import java.util.Arrays;
import java.util.Scanner;
interface ArraySorter {
    void sort(int[] array);
}
public class Main {
    public static void sortArray(int[] array, ArraySorter sorter) {
        sorter.sort(array);
    }
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Введите длину массива: ");
        int length = scanner.nextInt();
        int[] array = new int[length];
        System.out.println("Введите элементы массива:");
        for (int i = 0; i < length; i++) {
            array[i] = scanner.nextInt();}

        ArraySorter ascendingSorter = array1 -> Arrays.sort(array1);

        ArraySorter descendingSorter = array1 -> {
            Arrays.sort(array1);
            for (int i = 0, j = array1.length - 1; i < j; i++, j--) {
                int temp = array1[i];
                array1[i] = array1[j];
                array1[j] = temp;
            }
        };
        sortArray(array, ascendingSorter);
        System.out.println("Массив, отсортированный по возрастанию: " + Arrays.toString(array));

        sortArray(array, descendingSorter);
        System.out.println("Массив, отсортированный по убыванию: " + Arrays.toString(array));}}
