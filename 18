import java.util.Arrays;
import java.util.Scanner;

interface ArraySorter {
    void sort(int[] array);
}

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Введите размер массива: ");
        int size = scanner.nextInt();
        int[] array = new int[size];

        System.out.println("Введите элементы массива:");
        for (int i = 0; i < size; i++) {
            array[i] = scanner.nextInt();
        }

        ArraySorter increase = array1 -> Arrays.sort(array1);

        ArraySorter decrease = array1 -> {
            Arrays.sort(array1);
            for (int i = 0, j = array1.length - 1; i < j; i++, j--) {
                int temp = array1[i];
                array1[i] = array1[j];
                array1[j] = temp;
            }
        };
        System.out.println("Введеный массив: " + Arrays.toString(array));

        increase.sort(array);
        System.out.println("Отсортированный по возрастанию: " + Arrays.toString(array));

        decrease.sort(array);
        System.out.println("Отсортированный по убыванию: " + Arrays.toString(array));
    }
}
