import java.util.Arrays;
import java.util.Scanner;
interface Operationable<T> {
    T calculate(T x, T y);
}
public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Введите размер массива: ");
        int size = scanner.nextInt();

        Integer[] array = new Integer[size];

        System.out.print("Введите числа для массива: ");

        for (int i = 0; i < size; i++) {
            array[i]  = scanner.nextInt();
        }
        sortArray(array, (x, y) -> x < y ? x : y);
        System.out.println("Отсортированный по возрастанию массив: " + Arrays.toString(array));
        sortArray(array, (x, y) -> x > y ? x : y);
        System.out.println("Отсортированный по убыванию массив: " + Arrays.toString(array));
    }
    private static <T> void sortArray(T[] array, Operationable<T> operation) {
        for (int i = 0; i < array.length - 1; i++) {
            for (int j = i + 1; j < array.length; j++) {
                if (operation.calculate(array[i], array[j]) == array[j]) {
                    T temp = array[i];
                    array[i] = array[j];
                    array[j] = temp;}}}}}
