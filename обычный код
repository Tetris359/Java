import java.util.ArrayList;
import java.util.List;

class Book {
    private String title;
    private String author;

    public Book(String title, String author) {
        this.title = title;
        this.author = author;
    }

    public String getTitle() {
        return title;
    }

    public String getAuthor() {
        return author;
    }
}

public class Library {
    private List<Book> books;

    public Library() {
        books = new ArrayList<>();
    }

    public void addBook(String title, String author) {
        books.add(new Book(title, author));
    }

    public List<Book> searchByAuthor(String author) {
        List<Book> results = new ArrayList<>();
        for (Book book : books) {
            if (book.getAuthor().equalsIgnoreCase(author)) {
                results.add(book);
            }
        }
        return results; // возвращаем пустой список, если книги не найдены
    }

    public Book searchByTitle(String title) throws Exception {
        for (Book book : books) {
            if (book.getTitle().equalsIgnoreCase(title)) {
                return book; // возвращаем книгу, если найдена
            }
        }
        throw new Exception("Книга с заголовком" + title + " не найдена."); // исключение, если книга не найдена
    }

    public static void main(String[] args) {
        Library library = new Library();
        library.addBook("1984", "George Orwell");
        library.addBook("Brave New World", "Aldous Huxley");

        List<Book> orwellBooks = library.searchByAuthor("George Orwell");
        for (Book book : orwellBooks) {
            System.out.println("Found book: " + book.getTitle() + " by " + book.getAuthor());
        }

        try {
            Book book = library.searchByTitle("The Great Gatsby"); // попытка найти книгу
            System.out.println("Found book: " + book.getTitle() + " by " + book.getAuthor());
        } catch (Exception e) {
            System.out.println(e.getMessage()); // исключение, если книга не найдена
        }
    }
}
